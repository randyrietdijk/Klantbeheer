@using Microsoft.AspNetCore.Authentication

<div class="container">
	<div class="row d-flex justify-content-center">
		<div class="col-12 col-md-6 col-lg-4 col-xl-4 text-center">
			@if (User.Identity.IsAuthenticated)
			{
				<p>Je bent ingelogd als: <b>@User.Identity.Name</b></p>
				<a class="btn btn-dark" asp-controller="Account" asp-action="Logout">Uitloggen</a>
			}
			else
			{
				<p>Je bent niet ingelogd</p>
				<p><a class="btn btn-sm btn-primary" asp-controller="Account" asp-action="Login">Inloggen</a></p>
			}
		</div>
	</div>
</div>