@using CustomerManagement.IDP.ViewModels;

@model LoginForm

<div class="container">
	<div class="row d-flex justify-content-center">
		<div class="col-12 col-md-6 col-lg-4 col-xl-4">
			<h4 class="text-center">Inloggen</h4>
			<form autocomplete="off" asp-controller="Account" asp-action="Login" method="post">
				<input type="hidden" asp-for="ReturnUrl" />

				<div class="form-group">
					<label asp-for="Username">Gebruikersnaam</label>
					<input asp-for="Username" type="text" class="form-control" placeholder="Gebruikersnaam" autofocus required>
				</div>

				<div class="form-group">
					<label asp-for="Password">Wachtwoord</label>
					<input asp-for="Password" type="password" class="form-control" placeholder="Wachtwoord">
				</div>

				<button type="submit" class="btn btn-primary">Inloggen</button>
			</form>
		</div>
	</div>
</div>
