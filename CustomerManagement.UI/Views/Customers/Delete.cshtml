@using CustomerManagement.ApiClient.Models.Customers;

@{
	CustomerVM customer = ViewBag.Customer;
}

<div class="container">
	<div class="row d-flex justify-content-center">
		<div class="col-12 col-md-6 col-lg-6 col-xl-6">
			<form asp-action="DeleteConfirmed" asp-route-id="@customer.Id">
				<p>Weet u zeker dat u de klant <b>@customer.Name</b> wilt verwijderen?</p>
				<input type="submit" value="Verwijder" class="btn btn-danger" />
			</form>
		</div>
	</div>
</div>